<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:text="Đặt hàng thành công"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/light_green_900"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/thoi_gian_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title_textView"
        android:layout_width="match_parent"
        android:text="2021-12-13T12:22:50.596+00:00"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/noi_dung_textView"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/thoi_gian_textView"
        android:text="Bạn đã đặt hàng thành công. Đơn hàng của bạn có mã là: 61b73b1a7e9557b10d0e4724"
        android:layout_height="wrap_content"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/noi_dung_textView"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>